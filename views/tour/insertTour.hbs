<script>
    // Mảng để lưu trữ các checkbox được chọn
    var selectedOptions = [];

    // JavaScript để ẩn/hiện hộp thoại
    function toggleDialog() {
        var dialog = document.getElementById("dialog");
        if (dialog.style.display === "block") {
            dialog.style.display = "none";
        } else {
            dialog.style.display = "block";
        }
    }

    // JavaScript để xử lý khi nhấp vào nút "OK"
    function handleOK() {
        toggleDialog();
    }

    // JavaScript để xử lý khi nhấp vào nút "Cancel"
    function handleCancel() {
       var checkboxes = document.querySelectorAll("input[type=checkbox]");
        checkboxes.forEach(function(checkbox) {
            checkbox.checked = selectedOptions[checkbox.id];
        });
        toggleDialog();
    }
</script>


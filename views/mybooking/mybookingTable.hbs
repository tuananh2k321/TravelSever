    }
    try {
      const result = await fetchAPI(url, option);
      console.log('comfirm result: ', result)
    } catch (e) {
      console.log('error comfirm: ', e)
      throw e;
    }
  }


  const confirm = (user_id, tour_id, id) => {
    swal({

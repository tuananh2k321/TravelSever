<script>
  const fetchAPI = async (url, option) => {
    const res = await fetch(url, option)
    return res.json();
  }

  const pushNotification = async (user_id, tour_id) => {
    const url = `/booking/cpanel/push-notification-feedback?userId=${user_id}&tourId=${tour_id}`;

    const option = {
      method: 'get',
      headers: { 'Content-Type': 'application/json' }
    }
    try {
      const result = await fetchAPI(url, option);
      console.log('delete result: ', result)
    } catch (e) {
      console.log('error delete: ', e)
      throw e;
    }
  }


  const confirmPush = (user_id, tour_id) => {
    swal({
      title: "Xác nhận gửi Feedback?",
      text: "Bạn có muốn gửi Feedback đến tour này?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        if (willDelete) {
          pushNotification(user_id, tour_id);
          swal({
            title: "Success!",
            text: "Gửi Feedback thành công!!",
            icon: "success"
          }).then((wil) => {
            window.location.reload();
          })
        }
      });
  }




const comfirmBooking= async (user_id, tour_id, id) => {

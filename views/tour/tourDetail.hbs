<script>
    const myDialog = document.getElementById('myDialog');

    function openDialog() {
        myDialog.showModal();
    }

    function closeDialog() {
        myDialog.close();
    }

    function saveChanges() {
        // Thêm mã JavaScript để xử lý lưu thay đổi tại đây
        // Ví dụ: lấy giá trị từ trường input
        const inputValue = document.getElementById('inputField').value;
        const idValue = document.getElementById('inputField').placeholder;

        //Gủi dữliệu lên api
        fetch("http://localhost:3000/tour/api/departmentDate", {
            method: 'post',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ departmentDate: inputValue, id: idValue }),
        })
            .then(response => {
                console.log("response", response)
                if (!response.ok) {
                    alert('Ngày tháng năm phải lớn hơn ngày dự kiến kết thúc tour.');
                    throw new Error('response failed')
                }
                return response.json();
            })
            .then(data => {
                // Xử lý phản hồi từ API nếu cần
                console.log('API response:', data);

                // Sau khi xử lý, đóng hộp thoại
                window.location.reload();
                closeDialog();
            })
            .catch(error => {
                // Xử lý lỗi nếu có
                console.error('Error:', error);
            });


    }
</script>


<Script>
   
      let offer =  '{{tour.offer}}';
       let adultPrice = '{{tour.adultPrice}}';
       let childrenPrice = '{{tour.childrenPrice}}' ;
        if (!isNaN(offer) && offer !== "") {
        offer = parseInt(offer);
        adultPrice = adultPrice - (adultPrice * offer / 100);
        childrenPrice = childrenPrice - (childrenPrice * offer / 100);
    } else {
        console.log("Chuỗi không hợp lệ hoặc là số 0.");
    }
   
  
    
    function formatAdultPrice() {
        const VND = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND', }).format(adultPrice);
        document.getElementById("AdultPrice").innerHTML = VND;
    }
    formatAdultPrice();

    
     
    function formatChildrenPrice() {
        const VND = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND', }).format(childrenPrice);
        document.getElementById("ChildrenPrice").innerHTML = VND;
    }
    formatChildrenPrice();

</Script>

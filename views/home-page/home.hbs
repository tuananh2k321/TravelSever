    async function fetchDataAndDrawChart() {
      function truncateText(text, maxLength) {
      return text.length > maxLength ? text.slice(0, maxLength) + '...' : text;
    }

      try {
        const response = await fetch('/booking/api/tourIsBooking');
        const data = await response.json();
        let tourIsBooking = data.tourIsBooking;
        let labels = tourIsBooking.map(item => item.tour_name);
        let values = tourIsBooking.map(item => item.totalPrice);

        const myChart = new Chart(ctx, {
          type: 'bar',
          indexAxis: 'y',
          data: {
            labels: labels,
            datasets: [{
              label: 'Doanh thu',
              backgroundColor: ["rgba(201, 203, 207, 0.2)", "rgba(255, 99, 132, 0.2)", "rgba(255, 159, 64, 0.2)",
                "rgba(255, 205, 86, 0.2)", "rgba(75, 192, 192, 0.2)", "rgba(54, 162, 235, 0.2)",
                "rgba(153, 102, 255, 0.2)", "rgba(201, 203, 207, 0.2)"
              ],
              borderColor: 'rgb(47, 128, 237)',
              data: values,
            }],
            
          },
          options: {
            scales: {
              yAxes: [{
                ticks: {
                  beginAtZero: true,
                }
              }],
              x: {
            ticks: {
              callback: function (value) {
                return truncateText(value, 10); // Giới hạn độ dài của nhãn trên trục X thành 10 ký tự
              },
            },
          },
              
            }
          },
        });

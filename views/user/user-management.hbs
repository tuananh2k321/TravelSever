<script>
    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option)
        return res.json();
    }

    const deleteUser = async (id) => {
        const url = `/user/cpanel/${id}/delete`;

        const option = {
            method: 'get',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            const result = await fetchAPI(url, option);
            console.log('delete result: ', result)

            if (result.status) {
                window.location.reload();
            } else {
                swal('Xóa thất bại!', {
                    icon: 'error',
                });
            }

        } catch (e) {
            console.log('error delete: ', e)
            throw e;
        }
    }

    const banUser = async (id) => {
        const url = `/user/cpanel/${id}/ban`;

        const option = {
            method: 'get',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            const result = await fetchAPI(url, option);
            console.log('ban result: ', result)

            if (result.status) {
                window.location.reload();
            } else {
                swal('Ban fail!', {
                    icon: 'error',
                });
            }

        } catch (e) {
            console.log('error ban: ', e)
            throw e;
        }
    }

    const confirmBan= (id) => {
        swal({
            title: "Ban confirm?",
            text: "You will ban this account?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    banUser(id);
                }
            });
    }

    const confirmDelete = (id) => {
        swal({
            title: "Xác nhận xóa?",
            text: "Bạn có muốn xóa sản phẩm này?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    deleteUser(id);
                }
            });
    }

</script>
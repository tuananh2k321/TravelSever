<main id="main" class="main">

  <div class="pagetitle">
    <h1>Edit Destination</h1>
    <!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"></h5>

            <!-- General Form Elements -->
            <form id="form" method="post" action="/destination/cpanel/{{destination._id}}/edit-destination"
              enctype="multipart/form-data">
              <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Destination Name</label>
                <div class="col-sm-10">
                  <input onchange="validate()" value="{{destination.destinationName}}" type="text" id="destinationName"
                    name="destinationName" class="form-control">
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                  <input onchange="validate()" value="{{destination.address}}" type="text" id="address" name="address"
                    class="form-control">
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Area</label>
                <div class="col-sm-10">
                  <input onchange="validate()" value="{{destination.area}}" type="text" id="area" name="area"
                    class="form-control">
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Content</label>
                <div class="col-sm-10">
                  <input onchange="validate()" value="{{destination.content}}" type="text" id="content" name="content"
                    class="form-control">
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputNumber" class="col-sm-2 col-form-label">Image Upload</label>
                <div class="col-sm-10">
                  <input oninput="validate()" onchange="displayImg()" class="form-control" id="mainImage"
                    name="mainImage" multiple="multiple" type="file" id="formFile">
                  <img id="listmainImage" src="{{destination.mainImage}}"
                    style="width: 200px; height: 100px; margin-top: 10px; object-fit: fill;" alt="mainImage des" />
                  <input type="hidden" id="imgUrl" name="mainImage" />
                </div>
              </div>

              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Submit Button</label>
                <div class="col-sm-10">
                  <button type="submit" id="submit" class="btn btn-primary">Submit
                    Form</button>
                </div>
              </div>

            </form><!-- End General Form Elements -->

          </div>
        </div>

      </div>
    </div>
  </section>

</main><!-- End #main -->

